<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_3sdp"
        android:background="@color/table_bg"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black_80"
            android:gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:text="Odometer"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/titilliumweb_regular"

                />


            <ImageView
                android:id="@+id/img_pop_Close"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_cancel" />

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txt_trackName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/titilliumweb_regular"
            android:gravity="center"
            android:padding="@dimen/_10sdp"

            android:textColor="@color/black"
            android:textSize="@dimen/_22ssp" />


        <EditText
            android:id="@+id/edit_pop_odometerreading"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/login_button"
            android:drawableLeft="@drawable/odometer_icon_2"
            android:drawablePadding="@dimen/_10sdp"
            android:fontFamily="@font/titilliumweb_regular"
            android:hint="Odometer"
            android:inputType="number"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingRight="@dimen/_20sdp"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimary"
            android:textSize="@dimen/_14sdp" />


        <Button
            android:id="@+id/btn_pop_verify"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/login_button"
            android:clickable="true"
            android:fontFamily="@font/titilliumweb_bolditalic"
            android:text="UPDATE"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_18ssp" />
    </LinearLayout>






    </LinearLayout>


</LinearLayout>