<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        >


        <LinearLayout
            android:id="@+id/liner_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"

            >




            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_txtsender"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:src="@drawable/circle_shape"
                    />

                <com.evolution.quicktrack.util.CircleImageView
                    android:id="@+id/img_usersender"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"

                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp" />

            </RelativeLayout>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp"
                >




            <RelativeLayout
                android:id="@+id/rel_senderImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_round_shape_blue_chat_sender"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/img_sender"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"

                    android:padding="@dimen/_3sdp"
                    android:scaleType="fitXY" />

                <ProgressBar
                    android:id="@+id/pg_sender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

            <TextView
                android:id="@+id/txt_sendermsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_round_shape_blue_chat_sender"
                android:paddingBottom="@dimen/_3sdp"
                android:paddingTop="@dimen/_3sdp"
                android:paddingLeft="@dimen/_4sdp"
                android:paddingRight="@dimen/_4sdp"
                android:text="name"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp"


                />

            <TextView
                android:id="@+id/txt_sendertime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_1sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_5ssp"
                android:visibility="visible" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/liner_recive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
           >




            <LinearLayout
                android:id="@+id/liner_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:orientation="vertical"
                >


            <RelativeLayout
                android:id="@+id/rel_reciveImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_round_shape_blue_chat"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/img_recive"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"

                    android:padding="@dimen/_3sdp"
                    android:scaleType="fitXY" />

                <ProgressBar
                    android:id="@+id/pg_recive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

                <TextView
                    android:id="@+id/txt_recivermsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/border_round_shape_blue_chat"

                    android:paddingLeft="@dimen/_4sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingRight="@dimen/_4sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:text="name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10ssp"


                    />

            <TextView
                android:layout_marginRight="@dimen/_10sdp"
                android:id="@+id/txt_recivertime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_1sdp"
                android:text="sdsdd"
                android:textColor="@color/black"
                android:textSize="@dimen/_5ssp"
                android:visibility="visible" />
            </LinearLayout>







            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_txtrecive"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:src="@drawable/circle_shape"
                    />
                <com.evolution.quicktrack.util.CircleImageView
                    android:id="@+id/img_userrecive"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"

                    />

            </RelativeLayout>

        </LinearLayout>



    </LinearLayout>




</RelativeLayout>