<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_arrow"
            android:layout_marginRight="@dimen/_30sdp"
            android:scaleType="fitStart"
            />


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <include layout="@layout/toolbar_with_image"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_manu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_40sdp"
        />

    </LinearLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:gravity="center_vertical"
    >

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="@dimen/_40sdp"
         android:orientation="horizontal"

         android:background="@color/white"
         android:gravity="center_vertical"
         >




         <ImageView
             android:id="@+id/img_right"
             android:layout_width="@dimen/_20sdp"
             android:layout_height="wrap_content"

             android:src="@drawable/right_icon" />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:text="Pass"
             android:gravity="center_vertical"
             android:textColor="@color/black_80"
             android:textSize="@dimen/_9ssp"
             android:fontFamily="@font/titilliumweb_bold"
             />

         <ImageView
             android:layout_width="@dimen/_20sdp"
             android:layout_height="wrap_content"
             android:src="@drawable/dislike_icon"
             android:layout_marginLeft="@dimen/_5sdp"

             />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:text="Fail"
             android:gravity="center_vertical"
             android:textColor="@color/black_80"
             android:textSize="@dimen/_9ssp"
             android:fontFamily="@font/titilliumweb_bold"
            />

         <ImageView
             android:layout_width="@dimen/_20sdp"
             android:layout_height="wrap_content"
             android:src="@drawable/na_icon"
             android:layout_marginLeft="@dimen/_5sdp"
             />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:text="N/A"
             android:gravity="center_vertical"
             android:textColor="@color/black_80"
             android:textSize="@dimen/_9ssp"
             android:fontFamily="@font/titilliumweb_bold"
             android:layout_marginLeft="@dimen/_3sdp"
           />




         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="@dimen/_20sdp"

             android:src="@drawable/msg_blue"
             android:backgroundTint="@color/colorPrimary"
             android:layout_marginLeft="@dimen/_5sdp"
             />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:text="N/A"
             android:gravity="center_vertical"
             android:textColor="@color/black_80"
             android:textSize="@dimen/_9ssp"
             android:fontFamily="@font/titilliumweb_bold"
             android:layout_marginLeft="@dimen/_5sdp"/>

         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="@dimen/_20sdp"

             android:src="@drawable/camera_blue"
             android:layout_marginLeft="@dimen/_5sdp"
             />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:text="Camera"
             android:gravity="center_vertical"
             android:textColor="@color/black_80"
             android:textSize="@dimen/_9ssp"
             android:fontFamily="@font/titilliumweb_bold"
             android:layout_marginLeft="@dimen/_5sdp"/>






     </LinearLayout>

    <Button
        android:translationZ="6dp"
        android:elevation="8dp"
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="submit"
        android:textColor="@color/white"
        android:background="@drawable/btn_shape_blue"
        android:layout_marginRight="@dimen/_15sdp"
        />
</RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
