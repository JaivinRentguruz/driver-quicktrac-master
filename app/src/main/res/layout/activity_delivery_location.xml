<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="main_bg"
        android:scaleType="fitXY"
        android:src="@drawable/main_bg" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <TextView

            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/titilliumweb_bolditalic"
            android:gravity="center"
            android:text="DELIVERY LOCATION"
            android:textColor="@color/black_80"
            android:textSize="@dimen/_10ssp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/titilliumweb_bolditalic"
                android:gravity="center"
                android:text="Delivery LOCATION"
                android:textAllCaps="true"
                android:textColor="@color/black_80"
                android:textSize="@dimen/_18ssp"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <Button
                    android:id="@+id/btnMutliple"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_23sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="left"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/btn_shape_black"
                    android:fontFamily="@font/titilliumweb_bold"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_1sdp"
                    android:text="Multiple Job"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8ssp"
                    android:visibility="gone" />
                <!--  <Button
                      android:layout_marginRight="8dp"
                      android:layout_centerVertical="true"
                      android:layout_alignParentRight="true"
                      android:id="@+id/btn_futile"
                      android:layout_width="wrap_content"
                      android:layout_height="@dimen/_23sdp"
                      android:background="@drawable/btn_shape_black"
                      android:fontFamily="@font/titilliumweb_bold"
                      android:paddingLeft="@dimen/_5sdp"
                      android:paddingRight="@dimen/_5sdp"
                      android:paddingBottom="@dimen/_1sdp"
                      android:text="Futile"
                      android:textColor="@color/white"
                      android:textSize="@dimen/_10ssp"
                      />
  -->


                <RelativeLayout
                    android:id="@+id/llDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/txtJobID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="0dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp"
                        android:gravity="center_vertical"/>

                    <ImageView
                        android:id="@+id/btnViewDetails"
                        android:layout_width="@dimen/title_image_height_width"
                        android:layout_height="@dimen/title_image_height_width"
                        android:layout_alignParentRight="true"
                        android:layout_margin="4dp"
                        android:contentDescription="ic_full_size"
                        android:src="@drawable/ic_full_size" />

                </RelativeLayout>


            </RelativeLayout>


            <!-- <Button
                 android:visibility="gone"
                 android:layout_gravity="right"
                 android:layout_margin="@dimen/_5sdp"
                 android:layout_marginRight="8dp"
                 android:layout_centerVertical="true"
                 android:layout_alignParentRight="true"
                 android:id="@+id/btnViewDetails"
                 android:layout_width="wrap_content"
                 android:layout_height="@dimen/_23sdp"
                 android:background="@drawable/btn_shape_black"
                 android:fontFamily="@font/titilliumweb_bold"
                 android:paddingLeft="@dimen/_5sdp"
                 android:layout_marginTop="16dp"
                 android:paddingRight="@dimen/_5sdp"
                 android:paddingBottom="@dimen/_1sdp"
                 android:text="View Details"
                 android:textColor="@color/white"
                 android:textSize="@dimen/_8ssp" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/black_80"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/titilliumweb_regular"
                        android:padding="@dimen/_5sdp"
                        android:text="PICKUP ADDRESS :  "
                        android:textColor="@color/white"

                        android:textSize="@dimen/_10ssp" />

                    <TextView
                        android:id="@+id/txt_pickupAddres"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/titilliumweb_regular"
                        android:padding="@dimen/_5sdp"
                        android:text="PICKUP ADDRESS   "
                        android:textColor="@color/white"

                        android:textSize="@dimen/_10ssp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/clientName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/nameDelivery"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.4"
                        android:background="@drawable/border_table_shape_blue"
                        android:fontFamily="@font/titilliumweb_bold"
                        android:padding="@dimen/_5sdp"
                        android:text="CLIENT NAME:"
                        android:textColor="@color/black_80"
                        android:textSize="@dimen/_10ssp" />

                    <TextView
                        android:id="@+id/txt_name"


                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:background="@drawable/border_table_shape_blue"
                        android:fontFamily="@font/titilliumweb_bold"
                        android:padding="@dimen/_5sdp"

                        android:textColor="@color/black_80"
                        android:textSize="@dimen/_10ssp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llCompanyNameDelivery"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/comName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.4"
                        android:background="@drawable/border_table_shape_blue"
                        android:fontFamily="@font/titilliumweb_bold"
                        android:padding="@dimen/_5sdp"
                        android:text="Delivery Company:"
                        android:textAllCaps="true"
                        android:textColor="@color/black_80"
                        android:textSize="@dimen/_10ssp" />

                    <TextView
                        android:id="@+id/txt_delivery_company"


                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:background="@drawable/border_table_shape_blue"
                        android:fontFamily="@font/titilliumweb_bold"
                        android:padding="@dimen/_5sdp"

                        android:textColor="@color/black_80"
                        android:textSize="@dimen/_10ssp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llAddressDelivery"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.4"
                        android:background="@drawable/border_table_shape_blue"
                        android:fontFamily="@font/titilliumweb_bold"
                        android:padding="@dimen/_5sdp"
                        android:text="ADDRESS:"
                        android:textColor="@color/black_80"
                        android:textSize="@dimen/_10ssp" />

                    <TextView
                        android:id="@+id/txt_deliveryaddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:background="@drawable/border_table_shape_blue"
                        android:fontFamily="@font/titilliumweb_bold"
                        android:padding="@dimen/_5sdp"

                        android:textColor="@color/black_80"
                        android:textSize="@dimen/_10ssp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llContactPerson"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.4"
                        android:background="@drawable/border_table_shape_blue"
                        android:fontFamily="@font/titilliumweb_bold"
                        android:padding="@dimen/_5sdp"
                        android:text="CONTACT PERSON:"
                        android:textColor="@color/black_80"
                        android:textSize="@dimen/_10ssp" />

                    <TextView
                        android:id="@+id/txt_contact_person"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:background="@drawable/border_table_shape_blue"
                        android:fontFamily="@font/titilliumweb_bold"
                        android:padding="@dimen/_5sdp"

                        android:textColor="@color/black_80"
                        android:textSize="@dimen/_10ssp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llContactNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.4"
                        android:background="@drawable/border_table_shape_blue"
                        android:fontFamily="@font/titilliumweb_bold"
                        android:padding="@dimen/_5sdp"
                        android:text="CONTACT NUMBER:"
                        android:textColor="@color/black_80"
                        android:textSize="@dimen/_10ssp" />

                    <TextView
                        android:id="@+id/txt_contact_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:background="@drawable/border_table_shape_blue"
                        android:fontFamily="@font/titilliumweb_bold"
                        android:padding="@dimen/_5sdp"

                        android:textColor="@color/black_80"
                        android:textSize="@dimen/_10ssp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llComments"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.4"
                        android:background="@drawable/border_table_shape_blue"
                        android:fontFamily="@font/titilliumweb_bold"
                        android:padding="@dimen/_5sdp"
                        android:text="COMMENT:"
                        android:textColor="@color/black_80"
                        android:textSize="@dimen/_10ssp" />

                    <TextView
                        android:id="@+id/txtComment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:background="@drawable/border_table_shape_blue"
                        android:fontFamily="@font/titilliumweb_bold"
                        android:padding="@dimen/_5sdp"

                        android:textColor="@color/black_80"
                        android:textSize="@dimen/_10ssp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.4"
                        android:background="@drawable/border_table_shape_blue"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp">

                        <Button
                            android:id="@+id/btn_deliveryarrived"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_23sdp"
                            android:layout_gravity="center"
                            android:background="@drawable/btn_shape_black"
                            android:fontFamily="@font/titilliumweb_bold"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_1sdp"
                            android:text="ARRIVED"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_weight="0.6"
                        android:background="@drawable/border_table_shape_blue"
                        android:gravity="right"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp">

                        <Button
                            android:id="@+id/btn_changeAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_23sdp"
                            android:layout_gravity="center"
                            android:background="@drawable/btn_shape_black"
                            android:fontFamily="@font/titilliumweb_bold"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_1sdp"
                            android:text="CHANGE ADDRESS"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp"
                            android:visibility="gone" />


                        <Button
                            android:id="@+id/btn_loadTruck"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_23sdp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:background="@drawable/btn_shape_black"
                            android:fontFamily="@font/titilliumweb_bold"
                            android:paddingLeft="@dimen/_3sdp"
                            android:paddingRight="@dimen/_3sdp"
                            android:paddingBottom="@dimen/_1sdp"
                            android:text="UnLoad TRUCK"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp"
                            android:visibility="invisible" />

                    </LinearLayout>

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_gps"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_21sdp"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="left"
                        android:layout_margin="@dimen/_5sdp"
                        android:contentDescription="img_gps"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/btn_delay_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_23sdp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="left"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_toLeftOf="@+id/btn_futile"
                        android:background="@drawable/btn_shape_black"
                        android:fontFamily="@font/titilliumweb_bold"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_1sdp"
                        android:text="Delay"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8ssp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/btn_futile"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/btn_futile"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_23sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="left"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/btn_shape_black"
                        android:fontFamily="@font/titilliumweb_bold"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_1sdp"
                        android:text="Futile"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8ssp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>


            <!--  <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="right"
                  android:padding="@dimen/_10sdp"
                  >

                  <ImageView
                      android:id="@+id/img_gps"
                      android:layout_width="wrap_content"
                      android:layout_height="@dimen/_25sdp"
                      android:src="@drawable/gps_button"

                      />


              </LinearLayout>-->


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible">

                <!--  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="@dimen/_90sdp"
                      android:layout_alignParentBottom="false"
                      android:layout_centerInParent="true"
                      android:src="@drawable/truck_pick" />-->

                <fragment
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/delivermap"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context=".activity.jobmodule.DeliveryLocationActivity" />

                <LinearLayout


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/liner_name"


                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"

                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_minus3sdp"
                            android:fontFamily="@font/titilliumweb_bold"
                            android:gravity="center"
                            android:padding="0dp"
                            android:text="Driver Name : "
                            android:textColor="@color/black_80"
                            android:textSize="@dimen/_14ssp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_minus3sdp"
                            android:fontFamily="@font/titilliumweb_regular"
                            android:gravity="center"
                            android:padding="0dp"

                            android:textColor="@color/black_60"
                            android:textSize="@dimen/_16ssp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/liner_time"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:orientation="horizontal"

                        >


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/titilliumweb_bold"
                            android:gravity="center"
                            android:text="Start Time : "
                            android:textColor="@color/black_80"
                            android:textSize="@dimen/_14ssp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/titilliumweb_regular"
                            android:gravity="center"
                            android:text="05:11:28"
                            android:textColor="@color/black_60"
                            android:textSize="@dimen/_16ssp" />


                    </LinearLayout>


                </LinearLayout>
            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>
