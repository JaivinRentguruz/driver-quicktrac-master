<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/main_bg"
    android:scaleType="fitXY"
    />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <include layout="@layout/toolbar"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_15sdp"
        android:gravity="top"
        android:orientation="vertical"
       >



        <TextView
            android:background="@color/white"
            android:paddingBottom="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/titilliumweb_bolditalic"
            android:gravity="center"
            android:text="TRUCK DETAILS"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp" />


        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingRight="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >

            <TextView
                android:textAllCaps="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:background="@drawable/border_table_shape_blue"
                android:layout_weight="1.3"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/black_80"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/titilliumweb_bold"
                />

            <TextView
                android:id="@+id/txt_identifier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:background="@drawable/border_table_shape_blue"
                android:fontFamily="@font/titilliumweb_bold"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/black_80"
                android:textSize="@dimen/_10ssp" />

        </LinearLayout>


        <LinearLayout
            android:paddingLeft="@dimen/_20sdp"
            android:paddingRight="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:background="@drawable/border_table_shape_blue"
                android:fontFamily="@font/titilliumweb_bold"
                android:padding="@dimen/_5sdp"
                android:text="COMPANY"
                android:textColor="@color/black_80"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/txt_truck_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:background="@drawable/border_table_shape_blue"
                android:fontFamily="@font/titilliumweb_bold"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/black_80"
                android:textSize="@dimen/_10ssp" />

        </LinearLayout>
        <LinearLayout
            android:paddingLeft="@dimen/_20sdp"
            android:paddingRight="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:background="@drawable/border_table_shape_blue"
                android:fontFamily="@font/titilliumweb_bold"
                android:padding="@dimen/_5sdp"
                android:text="LICENSE PLATE"
                android:textColor="@color/black_80"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/txt_licence_plate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:background="@drawable/border_table_shape_blue"
                android:fontFamily="@font/titilliumweb_bold"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/black_80"
                android:textSize="@dimen/_10ssp" />

        </LinearLayout>


    </LinearLayout>


    </LinearLayout>

</RelativeLayout>
