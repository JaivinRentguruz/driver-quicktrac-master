<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/main_bg"
    android:scaleType="fitXY"
    />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <include layout="@layout/toolbar"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:gravity="center"
            android:orientation="vertical"

            >
            <ImageView
                android:id="@+id/img_refresh"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/refresh_icon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_8sdp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/titilliumweb_bolditalic"
                android:gravity="center"
                android:text="START LOCATION"
                android:textColor="@color/black_80"
                android:textSize="@dimen/_18ssp" />

        </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/titilliumweb_bold"
                    android:gravity="center"
                    android:text="YOU ARE ON PICK LOCATION"
                    android:textColor="@color/black_80"
                    android:textSize="@dimen/_16ssp" />


                <ImageView
                    android:id="@+id/img_start"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_alignParentBottom="false"
                    android:layout_centerInParent="true"
                    android:src="@drawable/btn_start" />


            </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >


            <TextView
                android:id="@+id/txt_warning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/titilliumweb_bold"
                android:gravity="center"
                android:text="YOU ARE NOT ON PICK LOCATION"
                android:textColor="@color/red"
                android:textSize="@dimen/_12ssp"
                android:visibility="gone"
                />





        </LinearLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_alignParentBottom="false"
                    android:layout_centerInParent="true"
                    android:src="@drawable/truck_start" />

                <LinearLayout


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >

                    <LinearLayout
                        android:id="@+id/liner_name"


                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"

                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_minus3sdp"
                            android:fontFamily="@font/titilliumweb_bold"
                            android:gravity="center"
                            android:padding="0dp"
                            android:text="Driver Name : "
                            android:textColor="@color/black_80"
                            android:textSize="@dimen/_14ssp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_minus3sdp"
                            android:fontFamily="@font/titilliumweb_regular"
                            android:gravity="center"
                            android:padding="0dp"

                            android:textColor="@color/black_60"
                            android:textSize="@dimen/_16ssp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/liner_time"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:orientation="horizontal"

                        >


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/titilliumweb_bold"
                            android:gravity="center"
                            android:text="Start Time : "
                            android:textColor="@color/black_80"
                            android:textSize="@dimen/_14ssp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/titilliumweb_regular"
                            android:gravity="center"
                            android:text="05:11:28"
                            android:textColor="@color/black_60"
                            android:textSize="@dimen/_16ssp" />


                    </LinearLayout>


                </LinearLayout>
            </RelativeLayout>


        </LinearLayout>




</RelativeLayout>
