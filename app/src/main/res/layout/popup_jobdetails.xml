<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    app:cardElevation="4dp"
    android:translationZ="4dp"
    app:cardCornerRadius="16dp"
    android:background="@drawable/background_popup"
    android:id="@+id/pop_main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <!-- Job heading-->
        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/background_rounded_black"
            android:weightSum="2">
            <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:text="Job Details"
                android:textColor="@color/white"
                android:textSize="@dimen/_8ssp"
                android:fontFamily="@font/titilliumweb_regular"
                android:visibility="visible"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1.8"/>
            <ImageView

                android:layout_marginRight="16dp"
                android:layout_alignParentRight="true"
                android:id="@+id/pop_close_img"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:src="@drawable/ic_cancel"
                android:layout_weight="0.2"
                />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Company Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:padding="@dimen/_2sdp"
                    android:orientation="horizontal">

                    <TextView

                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:text="Company Name :"
                        android:padding="@dimen/_2sdp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black_80"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/pop_companyname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:text="-"
                        android:padding="@dimen/_2sdp"
                        android:gravity="center_vertical"
                        />

                </LinearLayout>

                <!-- Delivery Type -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:padding="@dimen/_2sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:text="Delivery Type :"
                        android:padding="@dimen/_2sdp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black_80"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/pop_deliverytype"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:text="-"
                        android:padding="@dimen/_2sdp"
                        android:gravity="center_vertical"
                       />

                </LinearLayout>

                <!-- Requested By -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:padding="@dimen/_2sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:text="Requested By :"
                        android:padding="@dimen/_2sdp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black_80"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/pop_requestby"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:text="-"
                        android:padding="@dimen/_2sdp"
                        android:gravity="center_vertical"
                       />

                </LinearLayout>

                <!-- Collaction Location -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:padding="@dimen/_2sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:text="Collaction Company"
                        android:padding="@dimen/_2sdp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black_80"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/pop_collationcompany"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:text="-"
                        android:padding="@dimen/_2sdp"
                        android:gravity="center_vertical"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:padding="@dimen/_2sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:text="Collaction Location"
                        android:padding="@dimen/_2sdp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black_80"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/pop_collationlocation"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:text="-"
                        android:padding="@dimen/_2sdp"
                        android:gravity="center_vertical"
                       />

                </LinearLayout>

                <!--contact fields-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:padding="@dimen/_2sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:text="Contact person"
                        android:padding="@dimen/_2sdp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black_80"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/pop_collation_contact_person"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:text="-"
                        android:padding="@dimen/_2sdp"
                        android:gravity="center_vertical"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:padding="@dimen/_2sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:text="Contact number"
                        android:padding="@dimen/_2sdp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black_80"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/pop_collation_contact_number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:text="-"
                        android:padding="@dimen/_2sdp"
                        android:gravity="center_vertical"
                        />

                </LinearLayout>


                <!-- Contact Person -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:padding="@dimen/_2sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:text="Contact Person :"
                        android:padding="@dimen/_2sdp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black_80"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/pop_contactperson"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:text="-"
                        android:padding="@dimen/_2sdp"
                        android:gravity="center_vertical"
                        />

                </LinearLayout>

                <!-- Pickup from date-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:padding="@dimen/_2sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:text="Ready At:"
                        android:padding="@dimen/_2sdp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black_80"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/pop_pickupfromdate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:text="-"
                        android:padding="@dimen/_2sdp"
                        android:gravity="center_vertical"
                       />

                </LinearLayout>

                <!-- Delivery Location-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:padding="@dimen/_2sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:text="Delivery Company :"
                        android:padding="@dimen/_2sdp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black_80"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/pop_deliverycompany"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:text="-"
                        android:padding="@dimen/_2sdp"
                        android:gravity="center_vertical"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:padding="@dimen/_2sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:text="Delivery Location :"
                        android:padding="@dimen/_2sdp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black_80"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/pop_deliverylocation"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:text="-"
                        android:padding="@dimen/_2sdp"
                        android:gravity="center_vertical"
                       />

                </LinearLayout>

                <!-- Delivery Date & Time-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:padding="@dimen/_2sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:text="Closes At:"
                        android:padding="@dimen/_2sdp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black_80"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/pop_deliverydatetime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:text="-"
                        android:padding="@dimen/_2sdp"
                        android:gravity="center_vertical"
                       />

                </LinearLayout>

                <!-- Description-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:padding="@dimen/_2sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:text="Description :"
                        android:padding="@dimen/_2sdp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black_80"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/pop_description"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:text="-"
                        android:padding="@dimen/_2sdp"
                        android:gravity="center_vertical"
                       />

                </LinearLayout>

                <!-- Quantity-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:padding="@dimen/_2sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:text="Quantity :"
                        android:padding="@dimen/_2sdp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black_80"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/pop_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:text="-"
                        android:padding="@dimen/_2sdp"
                        android:gravity="center_vertical"
                        />

                </LinearLayout>

                <!-- Weight-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:padding="@dimen/_2sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:text="Weight :"
                        android:padding="@dimen/_2sdp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black_80"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/pop_weight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:text="-"
                        android:padding="@dimen/_2sdp"
                        android:gravity="center_vertical"
                       />

                </LinearLayout>

                <!-- Cubic Weight-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:padding="@dimen/_2sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:text="Cubic Weight :"
                        android:padding="@dimen/_2sdp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black_80"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/pop_cubicweght"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:text="-"
                        android:padding="@dimen/_2sdp"
                        android:gravity="center_vertical"
                       />

                </LinearLayout>

                <!-- Distance-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:padding="@dimen/_2sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:text="Distance :"
                        android:padding="@dimen/_2sdp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black_80"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/pop_distance"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:text="-"
                        android:padding="@dimen/_2sdp"
                        android:gravity="center_vertical"
                       />

                </LinearLayout>

                <!-- Dimension-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:padding="@dimen/_2sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:text="Dimension :"
                        android:padding="@dimen/_2sdp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black_80"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/pop_dimentation"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:text="-"
                        android:padding="@dimen/_2sdp"
                        android:gravity="center_vertical"
                       />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="10dp">
           <Button
               android:padding="8dp"
               android:id="@+id/pop_close"
               android:layout_width="wrap_content"
               android:layout_height="@dimen/_26sdp"
               android:layout_gravity="center"
               android:background="@drawable/btn_shape_black"
               android:paddingBottom="@dimen/_1sdp"
               android:text="Close"
               android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>