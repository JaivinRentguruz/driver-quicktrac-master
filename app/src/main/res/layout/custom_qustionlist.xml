<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:translationZ="2dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    android:layout_marginTop="@dimen/_5sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_round_shape_black"
            android:orientation="vertical"
            android:padding="@dimen/_8sdp">

            <TextView
                android:id="@+id/txt_qutn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/titilliumweb_regular"
                android:text=""
                android:textColor="@color/black_60"
                android:textSize="@dimen/_10ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="right">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:translationZ="2dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="42dp"
                        android:background="@drawable/border_round_shape_black"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img_right"
                                android:layout_width="@dimen/_28sdp"
                                android:layout_height="match_parent"
                                android:paddingLeft="@dimen/_8sdp"
                                android:paddingRight="@dimen/_8sdp"
                                android:src="@drawable/right_selector" />

                            <ImageView
                                android:id="@+id/img_like"
                                android:layout_width="@dimen/_28sdp"
                                android:layout_height="match_parent"
                                android:paddingLeft="@dimen/_8sdp"
                                android:paddingRight="@dimen/_8sdp"
                                android:src="@drawable/like_selector" />

                            <ImageView
                                android:id="@+id/img_na"
                                android:layout_width="@dimen/_28sdp"
                                android:layout_height="match_parent"
                                android:paddingLeft="@dimen/_8sdp"
                                android:paddingRight="@dimen/_8sdp"
                                android:src="@drawable/na_selector" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/border_round_shape_blue_qustn"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img_msg"
                                android:layout_width="@dimen/_28sdp"
                                android:layout_height="match_parent"
                                android:paddingLeft="@dimen/_8sdp"
                                android:paddingRight="@dimen/_8sdp"
                                android:src="@drawable/msg_icon" />

                            <ImageView
                                android:id="@+id/img_camera"

                                android:layout_width="@dimen/_28sdp"
                                android:layout_height="match_parent"
                                android:paddingLeft="@dimen/_8sdp"
                                android:paddingRight="@dimen/_8sdp"
                                android:src="@drawable/cmara_icon" />

                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/liner_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:visibility="gone">

                <EditText
                    android:id="@+id/edit_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_shape_gray"
                    android:hint="Enter Comment"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/liner_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:gravity="right"
                android:orientation="horizontal"
                android:visibility="visible"

                >

                <RelativeLayout
                    android:id="@+id/rel_img1"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_margin="@dimen/_3sdp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/img_1"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_alignParentBottom="true"
                        android:layout_weight="1"
                        android:background="@drawable/border_shape_image"
                        android:padding="@dimen/_1sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/sample_user" />

                    <ImageView
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_alignParentBottom="true"
                        android:layout_weight="1"
                        android:background="@drawable/border_shape_image"
                        android:padding="@dimen/_1sdp"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:id="@+id/img_close1"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/close_icon"

                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_img2"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_margin="@dimen/_3sdp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/img_2"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_alignParentBottom="true"
                        android:layout_weight="1"
                        android:background="@drawable/border_shape_image"
                        android:padding="@dimen/_1sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/sample_user" />

                    <ImageView
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_alignParentBottom="true"
                        android:layout_weight="1"
                        android:background="@drawable/border_shape_image"
                        android:padding="@dimen/_1sdp"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:id="@+id/img_close2"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/close_icon"

                        />

                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>
