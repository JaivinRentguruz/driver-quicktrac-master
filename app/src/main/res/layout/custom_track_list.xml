<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="22dp"
    android:background="@color/white"
   app:cardElevation="4dp"
    android:translationZ="2dp"
    android:layout_margin="@dimen/_2sdp"
    app:cardUseCompatPadding="true">
    <!--android:background="@drawable/border_shape_white"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_4sdp"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight="0.7"
                android:orientation="vertical"

                android:paddingRight="@dimen/_6sdp"
                android:paddingBottom="@dimen/_6sdp">

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/titilliumweb_bold"
                    android:textColor="@color/black_80"
                    android:textSize="@dimen/_8ssp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/border_blue_shape_white"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/light_blue"
                        android:fontFamily="@font/titilliumweb_regular"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:text="Truck Company:"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_6ssp" />


                    <TextView
                        android:id="@+id/txt_compny"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_weight="1"
                        android:background="@drawable/border_blue_shape_white"
                        android:fontFamily="@font/titilliumweb_regular"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:text="Code"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_6ssp"

                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:background="@drawable/border_blue_shape_white"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/light_blue"
                        android:fontFamily="@font/titilliumweb_regular"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:text="Capacity:"
                        android:textColor="@color/white"

                        android:textSize="@dimen/_6ssp" />

                    <TextView
                        android:id="@+id/txt_capacity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/border_blue_shape_white"
                        android:fontFamily="@font/titilliumweb_regular"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:text="Code"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_6ssp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:background="@drawable/border_blue_shape_white"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/light_blue"
                        android:fontFamily="@font/titilliumweb_regular"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:text="Licence Plat:"

                        android:textColor="@color/white"
                        android:textSize="@dimen/_6ssp" />

                    <TextView
                        android:id="@+id/txt_licenceplate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/border_blue_shape_white"
                        android:fontFamily="@font/titilliumweb_regular"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:text="Code"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_6ssp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:background="@drawable/border_blue_shape_white"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/light_blue"
                        android:fontFamily="@font/titilliumweb_regular"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:text="Vehicle Class:"

                        android:textColor="@color/white"
                        android:textSize="@dimen/_6ssp" />

                    <TextView
                        android:id="@+id/txt_class"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/border_blue_shape_white"
                        android:fontFamily="@font/titilliumweb_regular"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:text="Code"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_6ssp" />


                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_trck"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/track_image" />

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/tracklist_img" />

            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>